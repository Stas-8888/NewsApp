<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApppp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryVariant">@color/colorRed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <!-- navigation icon colorModel -->
        <item name="colorControlNormal">@color/white</item>
        <!-- colorModel of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- toolbar title colorModel -->
        <item name="titleTextColor">@color/white</item>
    </style>

</resources>
